mixin full-width-card(img, title, text, optionalTitle, imgMobile)
    .card.full-width-card(class!=attributes.class)
        img(src= img, alt="", srcset="", data-mob= imgMobile)
        .card__text.full-width-card__text
            if optionalTitle
                h2.mb-32= optionalTitle
            h3.mb-24= title
            p= text

mixin half-width-card(img, title, text)
    .card.half-width-card(class!=attributes.class)
        img(src= img, alt="", srcset="")
        .card__text
            h3.mb-24= title
            p= text

mixin animated-card(animationName, title, text)
    .card.animated-card.flex-row.align-center.justify-between.max-10.center.mlr-16-mob.mtb-100
        .animation-container(data-animation= animationName)
        .max-4
            h2.mb-24= title
            p!= text

mixin flow-key-marker(img, title, text)
    .flow-key-markers__block
        img.mb-24(src= img, alt="Flow key marker image")
        h3.semi-bold.mb-24= title
        p= text

